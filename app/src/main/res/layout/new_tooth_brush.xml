<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.chavin.myapplication.NewBrush">


    <EditText
        android:id="@+id/txt_NewBrushDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Date"
        android:inputType="text"
        android:textSize="24sp"
        android:layout_above="@+id/add_new_Brush"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/add_new_Brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawablePadding="-50sp"
        android:drawableTop="@drawable/button2"
        android:text="Add New Brush"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginStart="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp" />

    <TextView
            android:id="@+id/NewBrushHeading"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_centerInParent="false"
            android:gravity="center"
            android:text="Toothbrush"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="24sp" />

    <ListView
        android:id="@+id/newBrushList"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:choiceMode="multipleChoice"/>

    <Button
        android:id="@+id/buttonDelete"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:background="@android:color/transparent"
        android:drawablePadding="-50sp"
        android:drawableTop="@drawable/button2"
        android:text="Delete Brush"
        android:layout_alignBaseline="@+id/add_new_Brush"
        android:layout_alignBottom="@+id/add_new_Brush"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
